<form class="{{cssClass}} sra2-item-sheet sra2-feat-sheet" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <div class="header-fields">
      <h1 class="item-name"><input name="name" type="text" value="{{item.name}}"
          placeholder="{{localize 'SRA2.FEATS.NAME'}}" /></h1>
      <div class="header-meta">
        <div class="feat-type-badge">
          {{#if (eq system.featType "trait")}}{{localize "SRA2.FEATS.FEAT_TYPE.TRAIT"}}
          {{else if (eq system.featType "contact")}}{{localize "SRA2.FEATS.FEAT_TYPE.CONTACT"}}
          {{else if (eq system.featType "awakened")}}{{localize "SRA2.FEATS.FEAT_TYPE.AWAKENED"}}
          {{else if (eq system.featType "adept-power")}}{{localize "SRA2.FEATS.FEAT_TYPE.ADEPT_POWER"}}
          {{else if (eq system.featType "equipment")}}{{localize "SRA2.FEATS.FEAT_TYPE.EQUIPMENT"}}
          {{else if (eq system.featType "armor")}}{{localize "SRA2.FEATS.FEAT_TYPE.ARMOR"}}
          {{else if (eq system.featType "cyberware")}}{{localize "SRA2.FEATS.FEAT_TYPE.CYBERWARE"}}
          {{else if (eq system.featType "cyberdeck")}}{{localize "SRA2.FEATS.FEAT_TYPE.CYBERDECK"}}
          {{else if (eq system.featType "vehicle")}}{{localize "SRA2.FEATS.FEAT_TYPE.VEHICLE"}}
          {{else if (eq system.featType "weapons-spells")}}{{localize "SRA2.FEATS.FEAT_TYPE.WEAPONS_SPELLS"}}
          {{else if (eq system.featType "weapon")}}{{localize "SRA2.FEATS.FEAT_TYPE.WEAPON"}}
          {{else if (eq system.featType "spell")}}{{localize "SRA2.FEATS.FEAT_TYPE.SPELL"}}
          {{else if (eq system.featType "power")}}{{localize "SRA2.FEATS.FEAT_TYPE.POWER"}}
          {{else if (eq system.featType "connaissance")}}{{localize "SRA2.FEATS.FEAT_TYPE.KNOWLEDGE"}}
          {{/if}}
        </div>
        <div class="recommended-level-badge" title="{{localize 'SRA2.FEATS.RECOMMENDED_LEVEL'}}">
          <i class="fas fa-level-up-alt"></i> {{#if (or system.recommendedLevel (eq system.recommendedLevel
          0))}}{{system.recommendedLevel}}{{else}}0{{/if}}
        </div>
      </div>
    </div>
  </header>

  <div class="sheet-wrapper">
    <div class="sheet-content">
      <!-- Left Sidebar Navigation -->
      <nav class="section-nav">
        <button type="button" class="nav-item {{#if (eq activeSection 'general')}}active{{/if}}" data-section="general"
          title="{{localize 'SRA2.FEATS.SECTION.GENERAL'}}">
          <i class="fas fa-info-circle"></i>
        </button>
        <button type="button" class="nav-item {{#if (eq activeSection 'stats')}}active{{/if}}" data-section="stats"
          title="{{localize 'SRA2.FEATS.SECTION.STATS'}}">
          <i class="fas fa-chart-bar"></i>
        </button>
        {{#if (or (eq system.featType "weapon") (eq system.featType "weapons-spells"))}}
        <button type="button" class="nav-item {{#if (eq activeSection 'weapon')}}active{{/if}}" data-section="weapon"
          title="{{localize 'SRA2.FEATS.SECTION.WEAPON'}}">
          <i class="fas fa-crosshairs"></i>
        </button>
        {{/if}}
        {{#if (eq system.featType "spell")}}
        <button type="button" class="nav-item {{#if (eq activeSection 'spell')}}active{{/if}}" data-section="spell"
          title="{{localize 'SRA2.FEATS.SECTION.SPELL'}}">
          <i class="fas fa-hat-wizard"></i>
        </button>
        {{/if}}
        {{#if (eq system.featType "power")}}
        <button type="button" class="nav-item {{#if (eq activeSection 'power')}}active{{/if}}" data-section="power"
          title="{{localize 'SRA2.FEATS.SECTION.POWER'}}">
          <i class="fas fa-gears"></i>
        </button>
        {{/if}}
        {{#if (eq system.featType "vehicle")}}
        <button type="button" class="nav-item {{#if (eq activeSection 'vehicle')}}active{{/if}}" data-section="vehicle"
          title="{{localize 'SRA2.FEATS.SECTION.VEHICLE'}}">
          <i class="fas fa-car"></i>
        </button>
        {{/if}}
        {{#if (eq system.featType "cyberdeck")}}
        <button type="button" class="nav-item {{#if (eq activeSection 'cyberdeck')}}active{{/if}}"
          data-section="cyberdeck" title="{{localize 'SRA2.FEATS.SECTION.CYBERDECK'}}">
          <i class="fas fa-laptop-code"></i>
        </button>
        {{/if}}
        {{#if (eq system.featType "contact")}}
        <button type="button" class="nav-item {{#if (eq activeSection 'contact')}}active{{/if}}" data-section="contact"
          title="{{localize 'SRA2.FEATS.SECTION.CONTACT'}}">
          <i class="fas fa-user-friends"></i>
        </button>
        {{/if}}
        {{#if (eq system.featType "awakened")}}
        <button type="button" class="nav-item {{#if (eq activeSection 'awakened')}}active{{/if}}"
          data-section="awakened" title="{{localize 'SRA2.FEATS.SECTION.AWAKENED'}}">
          <i class="fas fa-om"></i>
        </button>
        {{/if}}
        <button type="button" class="nav-item {{#if (eq activeSection 'rr')}}active{{/if}}" data-section="rr"
          title="{{localize 'SRA2.FEATS.SECTION.RR'}}">
          <i class="fas fa-percentage"></i>
        </button>
        <button type="button" class="nav-item {{#if (eq activeSection 'effects')}}active{{/if}}" data-section="effects"
          title="{{localize 'SRA2.FEATS.SECTION.EFFECTS'}}">
          <i class="fas fa-magic"></i>
        </button>
        <button type="button" class="nav-item {{#if (eq activeSection 'description')}}active{{/if}}"
          data-section="description" title="{{localize 'SRA2.FEATS.SECTION.DESCRIPTION'}}">
          <i class="fas fa-book"></i>
        </button>
      </nav>

      <!-- Main Content Area -->
      <div class="section-content">
        <!-- General Section -->
        <section class="content-section {{#if (eq activeSection 'general')}}active{{/if}}"
          data-section-content="general">
          <h2><i class="fas fa-info-circle"></i> {{localize "SRA2.FEATS.SECTION.GENERAL"}}</h2>

          <div class="form-group">
            <label>{{localize "SRA2.FEATS.FEAT_TYPE.LABEL"}}</label>
            <select name="system.featType">
              <option value="trait" {{#if (eq system.featType "trait" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.FEAT_TYPE.TRAIT"}}</option>
              <option value="contact" {{#if (eq system.featType "contact" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.FEAT_TYPE.CONTACT"}}</option>
              <option value="awakened" {{#if (eq system.featType "awakened" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.FEAT_TYPE.AWAKENED"}}</option>
              <option value="adept-power" {{#if (eq system.featType "adept-power" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.FEAT_TYPE.ADEPT_POWER"}}</option>
              <option value="equipment" {{#if (eq system.featType "equipment" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.FEAT_TYPE.EQUIPMENT"}}</option>
              <option value="armor" {{#if (eq system.featType "armor" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.FEAT_TYPE.ARMOR"}}</option>
              <option value="cyberware" {{#if (eq system.featType "cyberware" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.FEAT_TYPE.CYBERWARE"}}</option>
              <option value="cyberdeck" {{#if (eq system.featType "cyberdeck" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.FEAT_TYPE.CYBERDECK"}}</option>
              <option value="vehicle" {{#if (eq system.featType "vehicle" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.FEAT_TYPE.VEHICLE"}}</option>
              <option value="weapons-spells" {{#if (eq system.featType "weapons-spells" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.FEAT_TYPE.WEAPONS_SPELLS"}}</option>
              <option value="weapon" {{#if (eq system.featType "weapon" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.FEAT_TYPE.WEAPON"}}</option>
              <option value="spell" {{#if (eq system.featType "spell" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.FEAT_TYPE.SPELL"}}</option>
              <option value="power" {{#if (eq system.featType "power" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.FEAT_TYPE.POWER"}}</option>
              <option value="connaissance" {{#if (eq system.featType "connaissance" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.FEAT_TYPE.KNOWLEDGE"}}</option>
            </select>
          </div>

          <div class="form-group">
            <label>{{localize "SRA2.FEATS.RATING"}}</label>
            <input type="number" name="system.rating" value="{{system.rating}}" min="0" readonly
              title="{{localize 'SRA2.FEATS.RATING_AUTO_CALCULATED'}}" />
            <p class="notes">{{localize "SRA2.FEATS.RATING_AUTO_CALCULATED"}}</p>
          </div>

          {{#if (or (eq system.featType "equipment") (eq system.featType "weapon") (eq system.featType
          "weapons-spells"))}}
          <div class="form-group">
            <label>{{localize "SRA2.FEATS.COST.LABEL"}}</label>
            <select name="system.cost">
              <option value="free-equipment" {{#if (eq system.cost "free-equipment" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.COST.FREE_EQUIPMENT"}}</option>
              <option value="equipment" {{#if (eq system.cost "equipment" )}}selected{{/if}}>{{localize
                "SRA2.FEATS.COST.EQUIPMENT"}}</option>
              <option value="advanced-equipment" {{#if (eq system.cost "advanced-equipment" )}}selected{{/if}}>
                {{localize "SRA2.FEATS.COST.ADVANCED_EQUIPMENT"}}</option>
            </select>
          </div>
          {{/if}}

          <div class="form-group">
            <label>
              <input type="checkbox" name="system.active" {{checked system.active}} />
              {{localize "SRA2.FEATS.ACTIVE"}}
            </label>
          </div>

          <div class="form-group">
            <label>{{localize "SRA2.REFERENCE"}}</label>
            <input type="text" name="system.reference" value="{{system.reference}}" placeholder="{{localize 'SRA2.REFERENCE'}}" />
          </div>

          {{#if (eq system.featType "trait")}}
          <div class="form-group">
            <label>
              <input type="checkbox" name="system.isFirstFeat" {{checked system.isFirstFeat}} />
              {{localize "SRA2.FEATS.IS_FIRST_FEAT"}}
            </label>
            <p class="notes">{{localize "SRA2.FEATS.IS_FIRST_FEAT_HINT"}}</p>
          </div>
          {{/if}}

          {{#if (eq system.featType "cyberware")}}
          <div class="form-group">
            <label>{{localize "SRA2.FEATS.ESSENCE_COST"}}</label>
            <input type="number" name="system.essenceCost" value="{{system.essenceCost}}" min="0" step="0.5" />
          </div>
          <div class="form-group">
            <label>
              <input type="checkbox" name="system.isBioware" {{checked system.isBioware}} />
              {{localize "SRA2.FEATS.IS_BIOWARE"}}
            </label>
            <p class="notes">{{localize "SRA2.FEATS.IS_BIOWARE_HINT"}}</p>
          </div>
          {{/if}}

          <h3>{{localize "SRA2.FEATS.CHOICE_OPTIONS"}}</h3>
          <p class="notes">{{localize "SRA2.FEATS.CHOICE_OPTIONS_HINT"}}</p>

          <div class="form-group">
            <label>
              <input type="checkbox" name="system.isOptional" {{checked system.isOptional}} />
              {{localize "SRA2.FEATS.IS_OPTIONAL"}}
            </label>
            <p class="notes">{{localize "SRA2.FEATS.IS_OPTIONAL_HINT"}}</p>
          </div>

          <div class="form-group">
            <label>
              <input type="checkbox" name="system.isAChoice" {{checked system.isAChoice}} />
              {{localize "SRA2.FEATS.IS_A_CHOICE"}}
            </label>
            <p class="notes">{{localize "SRA2.FEATS.IS_A_CHOICE_HINT"}}</p>
          </div>

          {{#if system.isAChoice}}
          <div class="form-group">
            <label>{{localize "SRA2.FEATS.NUMBER_OF_CHOICE"}}</label>
            <input type="number" name="system.numberOfChoice" value="{{system.numberOfChoice}}" min="1" />
            <p class="notes">{{localize "SRA2.FEATS.NUMBER_OF_CHOICE_HINT"}}</p>
          </div>
          {{/if}}
        </section>

        <!-- Stats Section -->
        <section class="content-section {{#if (eq activeSection 'stats')}}active{{/if}}" data-section-content="stats">
          <h2><i class="fas fa-chart-bar"></i> {{localize "SRA2.FEATS.SECTION.STATS"}}</h2>

          <div class="form-group recommended-level-display">
            <label>{{localize "SRA2.FEATS.RECOMMENDED_LEVEL"}}</label>
            <div class="recommended-level-value">{{#if (or system.recommendedLevel (eq system.recommendedLevel
              0))}}{{system.recommendedLevel}}{{else}}0{{/if}}</div>
            <p class="notes">{{localize "SRA2.FEATS.RECOMMENDED_LEVEL_HINT"}}</p>

            {{#if system.recommendedLevelBreakdown}}
            {{#if (gt system.recommendedLevelBreakdown.length 0)}}
            <div class="recommended-level-breakdown">
              <h4>{{localize "SRA2.FEATS.BREAKDOWN_TITLE"}}</h4>
              <ul>
                {{#each system.recommendedLevelBreakdown}}
                <li>
                  <span class="breakdown-label">{{localize this.labelKey}}{{#if this.labelParams}}
                    {{this.labelParams}}{{/if}}</span>
                  <span class="breakdown-value">{{#if (gte this.value 0)}}+{{/if}}{{this.value}}</span>
                </li>
                {{/each}}
              </ul>
            </div>
            {{/if}}
            {{/if}}
          </div>

          <div class="form-group">
            <label>{{localize "SRA2.FEATS.BONUS_LIGHT_DAMAGE"}}</label>
            <input type="number" name="system.bonusLightDamage" value="{{system.bonusLightDamage}}" min="0" />
          </div>

          <div class="form-group">
            <label>{{localize "SRA2.FEATS.BONUS_SEVERE_DAMAGE"}}</label>
            <input type="number" name="system.bonusSevereDamage" value="{{system.bonusSevereDamage}}" min="0" />
          </div>

          <div class="form-group">
            <label>{{localize "SRA2.FEATS.BONUS_PHYSICAL_THRESHOLD"}}</label>
            <input type="number" name="system.bonusPhysicalThreshold" value="{{system.bonusPhysicalThreshold}}" />
            <p class="notes">{{localize "SRA2.FEATS.BONUS_PHYSICAL_THRESHOLD_HINT"}}</p>
          </div>

          <div class="form-group">
            <label>{{localize "SRA2.FEATS.BONUS_MENTAL_THRESHOLD"}}</label>
            <input type="number" name="system.bonusMentalThreshold" value="{{system.bonusMentalThreshold}}" />
            <p class="notes">{{localize "SRA2.FEATS.BONUS_MENTAL_THRESHOLD_HINT"}}</p>
          </div>

          <div class="form-group">
            <label>{{localize "SRA2.FEATS.BONUS_MATRIX_THRESHOLD"}}</label>
            <input type="number" name="system.bonusMatrixThreshold" value="{{system.bonusMatrixThreshold}}" />
            <p class="notes">{{localize "SRA2.FEATS.BONUS_MATRIX_THRESHOLD_HINT"}}</p>
          </div>

          {{#if (eq system.featType "armor")}}
          <div class="form-group">
            <label>{{localize "SRA2.FEATS.ARMOR_VALUE"}}</label>
            <input type="number" name="system.armorValue" value="{{system.armorValue}}" min="0" max="5" />
            <p class="notes">{{localize "SRA2.FEATS.ARMOR_VALUE_HINT"}}</p>
          </div>
          {{/if}}

          {{#if (or (eq system.featType "trait") (eq system.featType "equipment") (eq system.featType "advanced-equipment") (eq system.featType "specialized-equipment") (eq system.featType "cyberware") (eq system.featType "adept-power"))}}
          <div class="form-group">
            <label>{{localize "SRA2.FEATS.WEAPON_DAMAGE_BONUS"}}</label>
            <input type="number" name="system.weaponDamageBonus" value="{{system.weaponDamageBonus}}" min="0" />
            <p class="notes">{{localize "SRA2.FEATS.WEAPON_DAMAGE_BONUS_HINT"}}</p>
          </div>
          <div class="form-group">
            <label>{{localize "SRA2.FEATS.WEAPON_TYPE_BONUS"}}</label>
            <select name="system.weaponTypeBonus">
              <option value="custom-weapon" {{#if (eq system.weaponTypeBonus "custom-weapon")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.CUSTOM_WEAPON"}}</option>
              <option value="bare-hands" {{#if (eq system.weaponTypeBonus "bare-hands")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.BARE_HANDS"}}</option>
              <option value="short-weapons" {{#if (eq system.weaponTypeBonus "short-weapons")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.SHORT_WEAPONS"}}</option>
              <option value="long-weapons" {{#if (eq system.weaponTypeBonus "long-weapons")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.LONG_WEAPONS"}}</option>
              <option value="advanced-melee" {{#if (eq system.weaponTypeBonus "advanced-melee")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.ADVANCED_MELEE"}}</option>
              <option value="throwing" {{#if (eq system.weaponTypeBonus "throwing")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.THROWING"}}</option>
              <option value="bows" {{#if (eq system.weaponTypeBonus "bows")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.BOWS"}}</option>
              <option value="crossbows" {{#if (eq system.weaponTypeBonus "crossbows")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.CROSSBOWS"}}</option>
              <option value="tasers" {{#if (eq system.weaponTypeBonus "tasers")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.TASERS"}}</option>
              <option value="pocket-pistols" {{#if (eq system.weaponTypeBonus "pocket-pistols")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.POCKET_PISTOLS"}}</option>
              <option value="light-pistols" {{#if (eq system.weaponTypeBonus "light-pistols")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.LIGHT_PISTOLS"}}</option>
              <option value="automatic-pistols" {{#if (eq system.weaponTypeBonus "automatic-pistols")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.AUTOMATIC_PISTOLS"}}</option>
              <option value="heavy-pistols" {{#if (eq system.weaponTypeBonus "heavy-pistols")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.HEAVY_PISTOLS"}}</option>
              <option value="smgs" {{#if (eq system.weaponTypeBonus "smgs")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.SMGS"}}</option>
              <option value="assault-rifles" {{#if (eq system.weaponTypeBonus "assault-rifles")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.ASSAULT_RIFLES"}}</option>
              <option value="shotguns" {{#if (eq system.weaponTypeBonus "shotguns")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.SHOTGUNS"}}</option>
              <option value="sniper-rifles" {{#if (eq system.weaponTypeBonus "sniper-rifles")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.SNIPER_RIFLES"}}</option>
              <option value="machine-guns" {{#if (eq system.weaponTypeBonus "machine-guns")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.MACHINE_GUNS"}}</option>
              <option value="grenades" {{#if (eq system.weaponTypeBonus "grenades")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.GRENADES"}}</option>
              <option value="gas-grenades" {{#if (eq system.weaponTypeBonus "gas-grenades")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.GAS_GRENADES"}}</option>
              <option value="grenade-launchers" {{#if (eq system.weaponTypeBonus "grenade-launchers")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.GRENADE_LAUNCHERS"}}</option>
              <option value="rocket-launchers" {{#if (eq system.weaponTypeBonus "rocket-launchers")}}selected{{/if}}>{{localize "SRA2.FEATS.WEAPON.TYPES.ROCKET_LAUNCHERS"}}</option>
            </select>
            <p class="notes">{{localize "SRA2.FEATS.WEAPON_TYPE_BONUS_HINT"}}</p>
          </div>
          {{/if}}

          <div class="form-group">
            <label>{{localize "SRA2.FEATS.BONUS_ANARCHY"}}</label>
            <input type="number" name="system.bonusAnarchy" value="{{system.bonusAnarchy}}" min="0" />
            <p class="notes">{{localize "SRA2.FEATS.BONUS_ANARCHY_HINT"}}</p>
          </div>

          <div class="form-group sustained-spell-group">
            <label>{{localize "SRA2.FEATS.SUSTAINED_SPELLS"}}</label>
            <p class="notes">{{localize "SRA2.FEATS.SUSTAINED_SPELLS_HINT"}}</p>
            <input type="hidden" name="system.sustainedSpellCount" value="{{system.sustainedSpellCount}}"
              data-dtype="Number" />
            <div class="bonus-checkboxes">
              <label class="bonus-checkbox-label">
                <input type="checkbox" class="sustained-spell-checkbox" data-spell-value="1" {{#if (gte
                  system.sustainedSpellCount 1)}}checked{{/if}} />
                <span>{{localize "SRA2.FEATS.SUSTAINED_SPELL_1"}}</span>
              </label>
              <label class="bonus-checkbox-label">
                <input type="checkbox" class="sustained-spell-checkbox" data-spell-value="2" {{#if (eq
                  system.sustainedSpellCount 2)}}checked{{/if}} />
                <span>{{localize "SRA2.FEATS.SUSTAINED_SPELL_2"}}</span>
              </label>
            </div>
          </div>

          <div class="form-group summoned-spirit-group">
            <label>{{localize "SRA2.FEATS.SUMMONED_SPIRIT"}}</label>
            <p class="notes">{{localize "SRA2.FEATS.SUMMONED_SPIRIT_HINT"}}</p>
            <input type="hidden" name="system.summonedSpiritCount" value="{{system.summonedSpiritCount}}"
              data-dtype="Number" />
            <div class="bonus-checkboxes">
              <label class="bonus-checkbox-label">
                <input type="checkbox" class="summoned-spirit-checkbox" {{#if (eq system.summonedSpiritCount
                  1)}}checked{{/if}} />
                <span>{{localize "SRA2.FEATS.SUMMONED_SPIRIT_1"}}</span>
              </label>
            </div>
          </div>

          <div class="form-group">
            <label>
              <input type="checkbox" name="system.grantsNarration" {{checked system.grantsNarration}} />
              {{localize "SRA2.FEATS.GRANTS_NARRATION"}}
            </label>
            <p class="notes">{{localize "SRA2.FEATS.GRANTS_NARRATION_HINT"}}</p>
          </div>

          {{#if system.grantsNarration}}
          <div class="form-group">
            <label>{{localize "SRA2.FEATS.NARRATION_ACTIONS"}}</label>
            <select name="system.narrationActions">
              <option value="1" {{#if (eq system.narrationActions 1)}}selected{{/if}}>1 {{localize
                "SRA2.FEATS.NARRATION_ACTION"}}</option>
              <option value="2" {{#if (eq system.narrationActions 2)}}selected{{/if}}>2 {{localize
