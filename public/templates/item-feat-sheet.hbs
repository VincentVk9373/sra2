            {{#if rrEntries}}
            {{#each rrEntries}}
            <div class="rr-entry" data-rr-index="{{index}}">
              <div class="rr-entry-header">
                <span class="entry-number">{{localize "SRA2.FEATS.RR_ENTRY_NUMBER"}} {{add index 1}}</span>
                <button type="button" data-action="remove-rr-entry" data-index="{{index}}"
                  title="{{localize 'SRA2.FEATS.REMOVE_RR_ENTRY'}}">
                  <i class="fas fa-trash"></i>
                </button>
              </div>

              <div class="form-group">
                <label>{{localize "SRA2.FEATS.RR_TYPE.LABEL"}}</label>
                <select name="system.rrList.{{index}}.rrType">
                  <option value="skill" {{#if (eq rrType "skill" )}}selected{{/if}}>{{localize
                    "SRA2.FEATS.RR_TYPE.SKILL"}}</option>
                  <option value="attribute" {{#if (eq rrType "attribute" )}}selected{{/if}}>{{localize
                    "SRA2.FEATS.RR_TYPE.ATTRIBUTE"}}</option>
                  <option value="specialization" {{#if (eq rrType "specialization" )}}selected{{/if}}>{{localize
                    "SRA2.FEATS.RR_TYPE.SPECIALIZATION"}}</option>
                </select>
              </div>

              <div class="form-group">
                <label>{{localize "SRA2.FEATS.RR_VALUE"}}</label>
                <input type="number" name="system.rrList.{{index}}.rrValue" value="{{rrValue}}" min="0" max="3" />
              </div>

              <div class="form-group">
                <label>{{localize "SRA2.FEATS.RR_TARGET"}}</label>
                {{#if (eq rrType "attribute")}}
                <select name="system.rrList.{{index}}.rrTarget">
                  <option value="">{{localize "SRA2.FEATS.RR_TARGET_SELECT"}}</option>
                  <option value="strength" {{#if (eq rrTarget "strength" )}}selected{{/if}}>{{localize
                    "SRA2.ATTRIBUTES.STRENGTH"}}</option>
                  <option value="agility" {{#if (eq rrTarget "agility" )}}selected{{/if}}>{{localize
                    "SRA2.ATTRIBUTES.AGILITY"}}</option>
                  <option value="willpower" {{#if (eq rrTarget "willpower" )}}selected{{/if}}>{{localize
                    "SRA2.ATTRIBUTES.WILLPOWER"}}</option>
                  <option value="logic" {{#if (eq rrTarget "logic" )}}selected{{/if}}>{{localize
                    "SRA2.ATTRIBUTES.LOGIC"}}</option>
                  <option value="charisma" {{#if (eq rrTarget "charisma" )}}selected{{/if}}>{{localize
                    "SRA2.ATTRIBUTES.CHARISMA"}}</option>
                </select>
                {{else}}
                <input type="hidden" name="system.rrList.{{index}}.rrTarget" value="{{rrTarget}}" />
                <div class="rr-target-search-container" data-rr-index="{{index}}">
                  {{#if rrTargetName}}
                  <div class="rr-target-display {{#if rrTargetNotFound}}warning{{/if}}">
                    {{#if rrTargetNotFound}}
                    <i class="fas fa-exclamation-triangle"></i>
                    {{else}}
                    <i class="fas fa-link"></i>
                    {{/if}}
                    <span class="target-name">{{rrTargetName}}</span>
                    <span class="target-type">({{rrTargetType}})</span>
                    {{#if rrTargetNotFound}}
                    <span class="warning-badge" title="{{localize 'SRA2.FEATS.TARGET_NOT_FOUND_ON_ACTOR'}}">⚠️</span>
                    {{/if}}
                    <a class="clear-link" data-action="clear-rr-target" data-index="{{index}}"
                      title="{{localize 'SRA2.FEATS.CLEAR_RR_TARGET'}}">
                      <i class="fas fa-times"></i>
                    </a>
                  </div>
                  {{else}}
                  <div class="rr-target-search-wrapper">
                    <input type="text" class="rr-target-search-input"
                      placeholder="{{localize 'SRA2.FEATS.SEARCH_TARGET_PLACEHOLDER'}}" data-rr-index="{{index}}"
                      autocomplete="off" />
                    <div class="rr-target-search-results"></div>
                  </div>
                  {{/if}}
                </div>
                {{/if}}
              </div>
            </div>
            {{/each}}
            {{else}}
            <p class="no-entries">{{localize "SRA2.FEATS.NO_RR_ENTRIES"}}</p>
            {{/if}}
          </div>
        </section>

        <!-- Effects Section -->
        <section class="content-section {{#if (eq activeSection 'effects')}}active{{/if}}"
          data-section-content="effects">
          <h2><i class="fas fa-magic"></i> {{localize "SRA2.FEATS.NARRATIVE_EFFECTS"}}</h2>
          <button type="button" data-action="add-narrative-effect"
            title="{{localize 'SRA2.FEATS.ADD_NARRATIVE_EFFECT'}}" class="add-entry-button">
            <i class="fas fa-plus"></i> {{localize "SRA2.FEATS.ADD_NARRATIVE_EFFECT"}}
          </button>

          <div class="narrative-effects-container">
            {{#if system.narrativeEffects}}
            {{#each system.narrativeEffects}}
            <div class="narrative-effect-entry">
              <div class="narrative-effect-header">
                <span class="entry-number">{{localize "SRA2.FEATS.EFFECT_NUMBER"}} {{add @index 1}}</span>
                <button type="button" data-action="remove-narrative-effect" data-index="{{@index}}"
                  title="{{localize 'SRA2.FEATS.REMOVE_NARRATIVE_EFFECT'}}">
                  <i class="fas fa-trash"></i>
                </button>
              </div>

              <div class="form-group">
                <textarea name="system.narrativeEffects.{{@index}}.text"
                  placeholder="{{localize 'SRA2.FEATS.NARRATIVE_EFFECT_PLACEHOLDER'}}">{{this.text}}</textarea>
              </div>

              <div class="form-group narrative-effect-negative">
                <label>
                  <input type="checkbox" name="system.narrativeEffects.{{@index}}.isNegative" {{checked
                    this.isNegative}} />
                  {{localize "SRA2.FEATS.NARRATIVE_EFFECT_NEGATIVE"}}
                </label>
                <p class="notes">{{localize "SRA2.FEATS.NARRATIVE_EFFECT_NEGATIVE_HINT"}}</p>
              </div>

              <div class="form-group narrative-effect-value">
                <label>{{localize "SRA2.FEATS.NARRATIVE_EFFECT_VALUE"}}</label>
                {{#if this.isNegative}}
                <select name="system.narrativeEffects.{{@index}}.value">
                  <option value="-5" {{#if (eq this.value -5)}}selected{{/if}}>-5</option>
                  <option value="-4" {{#if (eq this.value -4)}}selected{{/if}}>-4</option>
                  <option value="-3" {{#if (eq this.value -3)}}selected{{/if}}>-3</option>
                  <option value="-2" {{#if (eq this.value -2)}}selected{{/if}}>-2</option>
                  <option value="-1" {{#if (eq this.value -1)}}selected{{/if}}>-1</option>
                  <option value="0" {{#if (eq this.value 0)}}selected{{/if}}>0</option>
                </select>
                <p class="notes">{{localize "SRA2.FEATS.NARRATIVE_EFFECT_VALUE_HINT"}}</p>
                {{else}}
                <select name="system.narrativeEffects.{{@index}}.value">
                  <option value="0" {{#if (eq this.value 0)}}selected{{/if}}>0</option>
                  <option value="1" {{#if (eq this.value 1)}}selected{{/if}}>+1</option>
                  <option value="2" {{#if (eq this.value 2)}}selected{{/if}}>+2</option>
                  <option value="3" {{#if (eq this.value 3)}}selected{{/if}}>+3</option>
                  <option value="4" {{#if (eq this.value 4)}}selected{{/if}}>+4</option>
                  <option value="5" {{#if (eq this.value 5)}}selected{{/if}}>+5</option>
                </select>
                <p class="notes">{{localize "SRA2.FEATS.NARRATIVE_EFFECT_VALUE_POSITIVE_HINT"}}</p>
                {{/if}}
              </div>
            </div>
            {{/each}}
            {{else}}
            <p class="no-entries">{{localize "SRA2.FEATS.NO_NARRATIVE_EFFECTS"}}</p>
            {{/if}}
          </div>
        </section>

        <!-- Description Section -->
        <section class="content-section {{#if (eq activeSection 'description')}}active{{/if}}"
          data-section-content="description">
          <h2><i class="fas fa-book"></i> {{localize "SRA2.FEATS.DESCRIPTION"}}</h2>
          <div class="form-group">
            <div class="editor-content">{{editor system.description target="system.description" button=true
              engine="prosemirror" collaborate=false}}</div>
          </div>
        </section>
      </div>

    </div>
  </div>
</form>