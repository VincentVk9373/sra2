                        <input type="checkbox" name="system.anarchySpent.{{this.index}}" {{#if this.value}}checked{{/if}} />
                        <span class="box-circle"></span>
                    </label>
                    {{/each}}
                </div>
            </div>
            </div>

            {{/if}}
        </div>
