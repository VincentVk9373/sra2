                              {{#if this}}checked{{/if}} data-item-id="{{../this._id}}" data-damage-type="light"
                              data-damage-index="{{@index}}" />
                            <span class="box-circle"></span>
                          </label>
                          {{/each}}
                        </div>
                      </div>
                      <div class="damage-group severe">
                        <span class="track-label">{{localize "SRA2.DAMAGE.SEVERE"}}
                          ({{this.cyberdeckDamageThresholds.severe}})</span>
                        <div class="track-boxes">
                          {{#each this.system.cyberdeckDamage.severe}}
                          <label class="track-box {{#if this}}checked{{/if}}" data-item-id="{{../this._id}}"
                            data-damage-type="severe" data-damage-index="{{@index}}">
                            <input type="checkbox" name="items.{{../this._id}}.system.cyberdeckDamage.severe.{{@index}}"
                              {{#if this}}checked{{/if}} data-item-id="{{../this._id}}" data-damage-type="severe"
                              data-damage-index="{{@index}}" />
                            <span class="box-circle"></span>
                          </label>
                          {{/each}}
                        </div>
                      </div>
                      <div class="damage-group incapacitating">
                        <span class="track-label">{{localize "SRA2.DAMAGE.INCAPACITATING"}}
                          ({{this.cyberdeckDamageThresholds.incapacitating}})</span>
                        <div class="track-boxes">
                          <label class="track-box {{#if this.system.cyberdeckDamage.incapacitating}}checked{{/if}}"
                            data-item-id="{{this._id}}" data-damage-type="incapacitating">
                            <input type="checkbox" name="items.{{this._id}}.system.cyberdeckDamage.incapacitating" {{#if
                              this.system.cyberdeckDamage.incapacitating}}checked{{/if}} data-item-id="{{this._id}}"
                              data-damage-type="incapacitating" />
                            <span class="box-circle"></span>
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Cyberdeck Damage Thresholds -->
                  <div class="cyberdeck-damage-thresholds">
                    <h5>{{localize "SRA2.FEATS.CYBERDECK.DAMAGE_THRESHOLDS"}}</h5>
                    <div class="thresholds-list">
                      <div class="threshold-item">
                        <span class="threshold-label">{{localize "SRA2.DAMAGE.LIGHT"}}:</span>
                        <span class="threshold-value">{{this.cyberdeckDamageThresholds.light}}</span>
                      </div>
                      <div class="threshold-item">
                        <span class="threshold-label">{{localize "SRA2.DAMAGE.SEVERE"}}:</span>
                        <span class="threshold-value">{{this.cyberdeckDamageThresholds.severe}}</span>
                      </div>
                      <div class="threshold-item">
                        <span class="threshold-label">{{localize "SRA2.DAMAGE.INCAPACITATING"}}:</span>
                        <span class="threshold-value">{{this.cyberdeckDamageThresholds.incapacitating}}</span>
                      </div>
                    </div>
                  </div>

                  {{#if this.system.description}}
                  <div class="feat-description">{{{this.system.description}}}</div>
                  {{/if}}
                </div>
                {{/each}}
              </div>
            </div>
            {{/if}}

            <!-- Vehicle / Drone Section -->
            {{#if featsByType.vehicle}}
            <div class="feats-section vehicle-section">
              <h2>{{localize "SRA2.FEATS.FEAT_TYPE.VEHICLE"}}</h2>
              <div class="feats-list" data-drop-zone="feat">
                {{#each featsByType.vehicle}}
                {{#if (eq this.type "vehicle-actor")}}
                <!-- Linked Vehicle Actor -->
                <div class="feat-item vehicle-actor-item" data-vehicle-uuid="{{this.uuid}}" draggable="true">
                  {{else}}
                  <!-- Vehicle Feat (legacy) -->
                  <div class="feat-item" data-item-id="{{this._id}}" draggable="true">
                    {{/if}}
                    <div class="feat-header">
                      <div class="feat-title">
                        <h4>{{this.name}}
                          {{#unless (eq this.type "vehicle-actor")}}
                          {{#if this.rrEntries}}
                          {{#each this.rrEntries}}
                          <span class="rr-info" title="{{localize 'SRA2.FEATS.RR_EFFECT'}}">
                            {{#if (eq rrType "attribute")}}
                            [RR {{rrValue}} → {{rrTargetLabel}}]
                            {{else if (eq rrType "skill")}}
                            [RR {{rrValue}} → {{rrTarget}} ({{localize "SRA2.FEATS.RR_TYPE.SKILL"}})]
                            {{else if (eq rrType "specialization")}}
                            [RR {{rrValue}} → {{rrTarget}} ({{localize "SRA2.FEATS.RR_TYPE.SPECIALIZATION"}})]
                            {{/if}}
                          </span>
                          {{/each}}
                          {{/if}}
                          {{#if (or (gt this.system.bonusLightDamage 0) (gt this.system.bonusSevereDamage 0) (ne
                          this.system.bonusPhysicalThreshold 0) (ne this.system.bonusMentalThreshold 0) (gt
                          this.system.bonusAnarchy 0))}}
                          <span class="damage-bonus-info"
                            title="{{localize 'SRA2.FEATS.BONUS_LIGHT_DAMAGE'}} / {{localize 'SRA2.FEATS.BONUS_SEVERE_DAMAGE'}} / {{localize 'SRA2.FEATS.BONUS_PHYSICAL_THRESHOLD'}} / {{localize 'SRA2.FEATS.BONUS_MENTAL_THRESHOLD'}} / {{localize 'SRA2.FEATS.BONUS_ANARCHY'}}">
                            [
                            {{#if (gt this.system.bonusLightDamage 0)}}+{{this.system.bonusLightDamage}} {{localize
                            "SRA2.DAMAGE.LIGHT"}}{{/if}}
                            {{#if (and (gt this.system.bonusLightDamage 0) (or (gt this.system.bonusSevereDamage 0) (ne
                            this.system.bonusPhysicalThreshold 0) (ne this.system.bonusMentalThreshold 0) (gt
                            this.system.bonusAnarchy 0)))}} / {{/if}}
                            {{#if (gt this.system.bonusSevereDamage 0)}}+{{this.system.bonusSevereDamage}} {{localize
                            "SRA2.DAMAGE.SEVERE"}}{{/if}}
                            {{#if (and (gt this.system.bonusSevereDamage 0) (or (ne this.system.bonusPhysicalThreshold
                            0)
                            (ne this.system.bonusMentalThreshold 0) (gt this.system.bonusAnarchy 0)))}} / {{/if}}
                            {{#if (ne this.system.bonusPhysicalThreshold 0)}}{{#if (gt
                            this.system.bonusPhysicalThreshold
                            0)}}+{{/if}}{{this.system.bonusPhysicalThreshold}} {{localize
                            "SRA2.FEATS.BONUS_PHYSICAL_THRESHOLD_SHORT"}}{{/if}}
                            {{#if (and (ne this.system.bonusPhysicalThreshold 0) (or (ne
                            this.system.bonusMentalThreshold
                            0) (gt this.system.bonusAnarchy 0)))}} / {{/if}}
                            {{#if (ne this.system.bonusMentalThreshold 0)}}{{#if (gt this.system.bonusMentalThreshold
                            0)}}+{{/if}}{{this.system.bonusMentalThreshold}} {{localize
                            "SRA2.FEATS.BONUS_MENTAL_THRESHOLD_SHORT"}}{{/if}}
                            {{#if (and (ne this.system.bonusMentalThreshold 0) (gt this.system.bonusAnarchy 0))}} /
                            {{/if}}
                            {{#if (gt this.system.bonusAnarchy 0)}}+{{this.system.bonusAnarchy}} {{localize
                            "SRA2.FEATS.BONUS_ANARCHY_SHORT"}}{{/if}}
                            ]
                          </span>
                          {{/if}}
                          {{/unless}}
                        </h4>
                        {{#unless (eq this.type "vehicle-actor")}}
                        <input type="number" class="rating-input" name="items.{{this._id}}.system.rating"
                          value="{{this.system.rating}}" min="0" data-item-id="{{this._id}}"
                          title="{{localize 'SRA2.FEATS.RATING'}}" />
                        {{/unless}}
                        <span class="feat-cost">{{this.system.calculatedCost}} {{localize "SRA2.RESOURCES.YENS"}}</span>
                      </div>
                      <div class="feat-controls">
                        {{#if (eq this.type "vehicle-actor")}}
                        <a class="feat-edit" data-action="open-vehicle" data-vehicle-uuid="{{this.uuid}}"
                          title="{{localize 'SRA2.FEATS.VEHICLE.OPEN_SHEET'}}">
                          <i class="fas fa-edit"></i>
                        </a>
                        <a class="feat-delete" data-action="unlink-vehicle" data-vehicle-uuid="{{this.uuid}}"
                          title="{{localize 'SRA2.FEATS.VEHICLE.UNLINK'}}">
                          <i class="fas fa-unlink"></i>
                        </a>
                        {{else}}
                        <a class="feat-edit" data-action="edit-feat" data-item-id="{{this._id}}"
                          title="{{localize 'SRA2.FEATS.EDIT'}}">
                          <i class="fas fa-edit"></i>
                        </a>
                        <a class="feat-delete" data-action="delete-feat" data-item-id="{{this._id}}"
                          title="{{localize 'SRA2.FEATS.DELETE'}}">
                          <i class="fas fa-trash"></i>
                        </a>
                        {{/if}}
                      </div>
                    </div>
                    <!-- Vehicle/Drone Stats -->
                    <div class="vehicle-stats">
                      <div class="vehicle-stat-row">
                        <div class="vehicle-stat">
                          <span class="stat-label">{{localize "SRA2.FEATS.VEHICLE.AUTOPILOT_SHORT"}}:</span>
                          <span class="stat-value">{{this.system.autopilot}}</span>
                        </div>
                        <div class="vehicle-stat">
                          <span class="stat-label">{{localize "SRA2.FEATS.VEHICLE.STRUCTURE_SHORT"}}:</span>
                          <span class="stat-value">{{this.system.structure}}</span>
                        </div>
                        <div class="vehicle-stat">
                          <span class="stat-label">{{localize "SRA2.FEATS.VEHICLE.HANDLING_SHORT"}}:</span>
                          <span class="stat-value">{{this.system.handling}}</span>
                        </div>
                        <div class="vehicle-stat">
                          <span class="stat-label">{{localize "SRA2.FEATS.VEHICLE.SPEED_SHORT"}}:</span>
                          <span class="stat-value">{{this.system.speed}}</span>
                        </div>
                        <div class="vehicle-stat">
                          <span class="stat-label">{{localize "SRA2.FEATS.VEHICLE.ARMOR_SHORT"}}:</span>
                          <span class="stat-value">{{this.system.armor}}</span>
                        </div>
                      </div>
                      {{#if this.system.weaponInfo}}
                      <div class="vehicle-weapon-info">
                        <span class="weapon-info-label">{{localize "SRA2.FEATS.VEHICLE.WEAPON_INFO_SHORT"}}:</span>
                        <span class="weapon-info-value">{{this.system.weaponInfo}}</span>
                      </div>
                      {{/if}}
                    </div>
                    {{#if this.weapons}}
                    <!-- Vehicle Weapons (mounted weapons) -->
                    <div class="vehicle-weapons-list">
                      <h5>{{localize "SRA2.VEHICLE.WEAPONS"}}:</h5>
                      <ul class="vehicle-weapons">
                        {{#each this.weapons}}
                        <li class="vehicle-weapon-item">
                          <div class="weapon-header">
                            <span class="weapon-name">{{this.name}}</span>
                            {{#if this.system.finalDamageValue}}
                            <span class="weapon-damage">{{this.system.finalDamageValue}}</span>
                            {{/if}}
                          </div>
                          {{#if this.system.rrEntries}}
                          <div class="weapon-rr">
                            {{#each this.system.rrEntries}}
                            <span class="rr-badge" title="{{localize 'SRA2.FEATS.RR_EFFECT'}}">
                              {{#if (eq rrType "attribute")}}
                              RR {{rrValue}} → {{rrTargetLabel}}
                              {{else if (eq rrType "skill")}}
                              RR {{rrValue}} → {{rrTarget}} ({{localize "SRA2.FEATS.RR_TYPE.SKILL"}})
                              {{else if (eq rrType "specialization")}}
                              RR {{rrValue}} → {{rrTarget}} ({{localize "SRA2.FEATS.RR_TYPE.SPECIALIZATION"}})
                              {{/if}}
                            </span>
                            {{/each}}
                          </div>
                          {{/if}}
                          {{#if this.system.crr}}
                          <div class="weapon-crr">
                            <span class="crr-badge" title="{{localize 'SRA2.FEATS.WEAPON.CRR'}}">CRR
                              {{this.system.crr}}</span>
                          </div>
                          {{/if}}
                          <a class="feat-roll vehicle-weapon-roll" data-action="roll-vehicle-weapon"
                            data-vehicle-uuid="{{../uuid}}" data-weapon-id="{{this.weaponId}}"
                            title="{{localize 'SRA2.VEHICLE.ROLL_WEAPON_WITH_CHARACTER_SKILLS'}}">
                            <i class="fas fa-dice"></i> {{localize "SRA2.VEHICLE.ROLL_WEAPON"}}
                          </a>
                        </li>
                        {{/each}}
                      </ul>
                    </div>
                    {{/if}}
                    {{#if this.system.description}}
                    <div class="feat-description">{{{this.system.description}}}</div>
                    {{/if}}
                    {{#if this.system.narrativeEffects}}
                    {{#if (gt this.system.narrativeEffects.length 0)}}
                    <div class="narrative-effects">
                      <h5>{{localize "SRA2.FEATS.NARRATIVE_EFFECTS"}}:</h5>
                      <ul class="narrative-effects-list">
                        {{#each this.system.narrativeEffects}}
                        {{#if this.text}}
                        <li class="narrative-effect {{#if this.isNegative}}negative{{else}}positive{{/if}}">
                          {{#if this.isNegative}}
                          <span class="effect-badge negative">{{this.value}}</span>
                          {{else}}
                          <span class="effect-badge positive">+1</span>
                          {{/if}}
                          <span class="effect-text">{{this.text}}</span>
                        </li>
                        {{/if}}
                        {{/each}}
                      </ul>
                    </div>
                    {{/if}}
                    {{/if}}
                  </div>
                  {{/each}}
                </div>
              </div>
              {{/if}}

          </section>
        </section>

      </div>
    </div>
  </section>
</form>